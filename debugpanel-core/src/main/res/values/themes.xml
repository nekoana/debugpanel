<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DebugPanel" parent="Theme.AppCompat.DayNight">

    </style>

    <style name="DebugPanel.Ball" parent="DebugPanel">
        <item name="collapsedSize">@dimen/collapsed_size</item>
        <item name="collapsedBackground">@drawable/collapsed_background</item>
        <item name="collapsedTextSize">@dimen/collapsed_text_size</item>
    </style>

    <style name="DebugPanel.Container" parent="DebugPanel">
        <item name="expandedWidth">@dimen/expanded_width</item>
        <item name="expandedHeight">@dimen/expanded_height</item>
        <item name="expandedContainerBackground">@drawable/expended_container_background</item>
        <item name="android:padding">@dimen/container_padding</item>
    </style>

    <style name="DebugPanel.Button" parent="DebugPanel">
        <item name="android:buttonStyle">@style/DebugButton</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DebugPanel.List" parent="DebugPanel"></style>

    <style name="DebugPanel.Switch" parent="DebugPanel">
        <item name="switchStyle">@style/DebugSwitch</item>
    </style>

    <style name="DebugButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DebugSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/selector_track</item>
        <item name="android:thumb">@drawable/selector_thumb</item>
        <item name="android:layout_height">84dp</item>
    </style>
</resources>